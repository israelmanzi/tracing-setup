{
  "dashboard": {
    "title": "Instance Monitoring",
    "panels": [
      {
        "type": "stat",
        "title": "Up Instances",
        "targets": [
          {
            "expr": "count(up == 1)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "percentage",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "type": "stat",
        "title": "Down Instances",
        "targets": [
          {
            "expr": "count(up == 0)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "percentage",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "type": "table",
        "title": "Instance Status",
        "targets": [
          {
            "expr": "up",
            "refId": "C"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "columns": [
                {
                  "text": "Instance",
                  "value": "instance"
                },
                {
                  "text": "Status",
                  "value": "up"
                }
              ]
            }
          }
        ]
      }
    ]
  }
}
